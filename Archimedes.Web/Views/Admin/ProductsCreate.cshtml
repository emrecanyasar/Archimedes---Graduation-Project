@model Product
@{
    ViewData["Title"] = "ProductsCreate";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}


<h3 class="tittle">Ürün OLuştur</h3>
<div class="row inner-sec">
    <div class="login p-5 bg-light mx-auto mw-100">
        <form asp-controller="Admin" asp-action="ProductsCreate" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row mb-2">
                <label asp-for="ProductName" class="form-label"></label>
                <input type="text" class="form-control" asp-for="ProductName">
            </div>
            <div class="form-group row mb-2">
                <label asp-for="Price" class="form-label"></label>
                <input type="text" class="form-control" asp-for="Price">
            </div>
            <div class="form-group row mb-2">
                <label asp-for="ImageUrl" class="form-label"></label>
                <input type="text" class="form-control" asp-for="ImageUrl">
            </div>
            <div class="form-group row mb-2 my-4">

                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Category">
                    <option value="">Lütfen bir kategori seçiniz</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                    <button type="submit" class="btn btn-primary">Oluştur</button>
            </div>
        </form>

    </div>
</div>