@model ProductViewModel
@{
    ViewData["Title"] = "ProductsCreate";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}


<h3 class="tittle">Ürün OLuştur</h3>
<div class="row inner-sec">
    <div class="login p-5 bg-light mx-auto mw-100">
        <form asp-controller="Admin" asp-action="ProductsCreate" method="post">
            <div class="form-group row mb-2">
                <label asp-for="Name" class="col-2 col-form-label"></label>
                <div class="col-10">
                    <input type="text" class="form-control" asp-for="Name">
                </div>
            </div>
            <div class="form-group row mb-2">
                <label asp-for="Price" class="col-2 col-form-label"></label>
                <div class="col-10">
                    <input type="text" class="form-control" asp-for="Price">
                </div>
            </div>
            <div class="form-group row mb-2">
                <label asp-for="ImageUrl" class="col-2 col-form-label"></label>
                <div class="col-10">
                    <input type="text" class="form-control" asp-for="ImageUrl">
                </div>
            </div>
            <div class="form-group row mb-2">
                <label asp-for="categoryId" class="col-2 col-form-label"></label>
                <div class="col-10">
                    <input type="text" class="form-control" asp-for="categoryId">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-10 offset-2">
                    <button type="submit" class="btn btn-primary">Oluştur</button>
                </div>
            </div>
        </form>

    </div>
</div>