@model CategoryViewModel
@{
    ViewData["Title"] = "CategoryCreate";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h3 class="tittle">Kategori OLuştur</h3>
<div class="row inner-sec">
    <div class="login p-5 bg-light mx-auto mw-100">
        <form asp-controller="Admin" asp-action="CategoryCreate" method="post">
            <div class="form-group row mb-2">
                <label asp-for="CategoryName" class="col-2 col-form-label"></label>
                <div class="col-10">
                    <input type="text" class="form-control" asp-for="CategoryName">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-10 offset-2">
                    <button type="submit" class="btn btn-primary read-m">Oluştur</button>
                </div>
            </div>
        </form>

    </div>
</div>